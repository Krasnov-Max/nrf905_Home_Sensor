{
"version": "2.0.0",

"tasks": [
    {   
        
        "label": "clean",
        
        "type": "shell",
        "command": "make clean",
        "options": {
            "cwd": "${workspaceRoot}"
        }, 
        "group": {
            "kind": "test",
            "isDefault": true,
            
        },
        "problemMatcher": []
    },   
    {   
        
        "label": "build",
        
        "type": "shell",
        "command": "make",
        "options": {
            "cwd": "${workspaceRoot}"
        }, 
        "group": {
            "kind": "build",
            "isDefault": true,
            
        },
        "problemMatcher": []
    },

    {
        "label": "Load Firmware",
        "type": "shell",
        "command": "/usr/local/bin/st-flash write ./build/nrf905.bin 0x08000000",
        "options": {
            "cwd": "${workspaceRoot}"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": []
    }
]
}

    